<div class="container">
  <h1 class="title is-2">Rooms</h1>

  <table>
    <thead>
      <tr>
        <th>Price</th>
        <th>Description</th>
        <th>Title</th>
        <th>User</th>
        <th>Capacity</th>
        <th>Pets</th>
        <th>Smoking</th>
        <th>Wifi</th>
        <th>Bathrooms</th>
        <th>Bath</th>
        <th>Parties</th>
        <th>Photo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% current_user.rooms.each do |room| %>
        <tr>
          <td><%= room.price %></td>
          <td><%= room.description %></td>
          <td><%= room.title %></td>
          <td><%= room.user.email %></td>
          <td><%= room.capacity %></td>
          <td><%= room.pets %></td>
          <td><%= room.smoking %></td>
          <td><%= room.wifi %></td>
          <td><%= room.bathrooms %></td>
          <td><%= room.bath %></td>
          <td><%= room.parties %></td>
          <td><%= image_tag room.image.url if room.image? %>
          <td><%= link_to 'Show', room %></td>
          <td><%= link_to 'Edit', edit_room_path(room) %></td>
          <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>